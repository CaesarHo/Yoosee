<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/Loading_dialog2_width"
    android:layout_height="@dimen/loading_dialog2_content_height"
    android:layout_gravity="center"
    android:background="@drawable/dialog_back">


    <ProgressBar
        android:id="@+id/pre_linke"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="@dimen/progress_width_height"
        android:layout_height="@dimen/progress_width_height"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@anim/progress_white"
        android:indeterminateDuration="560000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pre_linke"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/waite"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>